<section>
	<div id="pagcontacto">
		<div class="container">
			<div class="table-responsive">
				<table class="table table-striped table-bordered">
					<thead>
						<th>Name</th>
						<th>Email</th>
						<th>Notes</th>
						<th>Actions</th>
					</thead>
					<tbody>

						<% @lead.each do |lead| %>

							<tr>
								<td><%= lead.name %></td>
								<td><%= lead.email %></td>
								<td><%= lead.notes %></td>
								<td>
									<%= link_to lead do %>
										<i class="fa fa-eye view"></i>
									<% end %>
									<%= link_to lead, method: :delete, data: { confirm: 'Are you sure?' } do %>
									<i class="fa fa-trash remove"></i>
									<% end %>
								</td>
							</tr>

						<%end %>

					</tbody>
				</table>
			</div>
		</div>
	</div>
</section>
